- var content = {regist:"登録", login:"ログイン", name:"名前", password:"パスワード", required:"必ず入力してください", toolong:"もうすこし短くしてください", editor:"ドクター(編集権限)", viewer:"ナース(参照権限)",update:"更新", save:"保存", cancel:"キャンセル", changepass:"パスワード変更" }

md-dialog.box-edge(flex="percentage")
    md-content
        md-toolbar.md-warn
            div.md-toolbar-tools(layout="row", layout-align="end center")
                h3(flex)
                    span(flex) NOTICE!!!

                div
                    md-button.md-fab.md-notice(ng-click='cancel()', aria-label="Cancel", style="position:relative;top:20px;")
                        ng-md-icon.iconfill(icon="clear", style="position:relative;top:4px;", size="46")
                        md-tooltip #{content.cancel}

        md-dialog-content
            .md-dialog-content
                h3 Server Restert & Database drop Required. (Data All Lost.)

        md-dialog-actions(layout="row")

            md-button.md-raised.md-warn(ng-click='answer()', aria-label="Update") #{content.update}
            md-tooltip #{content.update}
